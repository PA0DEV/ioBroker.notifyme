{
  "name": "iobroker.notifyme",
  "version": "0.0.1",
  "description": "Sends alerts based on state changes, threshold violations, or custom triggers using messaging services like CallMeBot. Future support for additional notification channels is planned.",
  "author": {
    "name": "PA0DEV",
    "email": "info@pa0dev.de"
  },
  "homepage": "https://github.com/PA0DEV/ioBroker.notifyme",
  "license": "MIT",
  "keywords": [
    "notification",
    "alert",
    "messaging",
    "threshold",
    "trigger",
    "state-change",
    "iot",
    "callmebot",
    "alarm",
    "monitoring",
    "automation",
    "push-message",
    "limits",
    "notifier",
    "smart-home",
    "event-based",
    "custom-alerts",
    "adapter",
    "reminder"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PA0DEV/ioBroker.notifyme.git"
  },
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/testing": "^5.0.4",
    "@tsconfig/node18": "^18.2.4",
    "@types/chai-as-promised": "^7.1.8",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.101",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai-as-promised": "^7.1.2",
    "chai": "^4.5.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint": "^9.27.0",
    "mocha": "^11.4.0",
    "prettier": "^3.5.3",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.0.1",
    "sinon": "^20.0.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.0.4"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/PA0DEV/ioBroker.notifyme/issues"
  },
  "readmeFilename": "README.md"
}